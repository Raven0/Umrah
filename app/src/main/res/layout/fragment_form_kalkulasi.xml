<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:clickable="false"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Nama (PIC)" />

                            <EditText
                                android:id="@+id/picName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_10sdp"
                                android:textColorHint="#bababa"
                                android:textSize="@dimen/_12sdp"
                                android:theme="@style/EditTextThemes" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="No Telp" />

                            <EditText
                                android:id="@+id/etTelp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_10sdp"
                                android:textColorHint="#bababa"
                                android:textSize="@dimen/_12sdp"
                                android:theme="@style/EditTextThemes" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Jumlah" />

                            <EditText
                                android:id="@+id/etJumlah"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_10sdp"
                                android:textColorHint="#bababa"
                                android:textSize="@dimen/_12sdp"
                                android:theme="@style/EditTextThemes" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Infant" />

                            <EditText
                                android:id="@+id/etInfant"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_10sdp"
                                android:textColorHint="#bababa"
                                android:textSize="@dimen/_12sdp"
                                android:theme="@style/EditTextThemes" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Balita" />

                            <EditText
                                android:id="@+id/etBalita"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_10sdp"
                                android:textColorHint="#bababa"
                                android:textSize="@dimen/_12sdp"
                                android:theme="@style/EditTextThemes" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Tanggal Keberangkatan" />

                            <TextView
                                android:id="@+id/dateDeparture"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?attr/editTextBackground"
                                android:drawableRight="@drawable/ic_action_date"
                                android:text="28 Januari 2018"
                                android:theme="@style/EditTextThemes" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Nama Paket" />

                            <EditText
                                android:id="@+id/etPaket"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_10sdp"
                                android:text="Reguler Madinah CGKMED"
                                android:textColorHint="#bababa"
                                android:textSize="@dimen/_12sdp"
                                android:theme="@style/EditTextThemes" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text=" Hotel" />

                            <com.jaredrummler.materialspinner.MaterialSpinner
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:text="RAHMAH" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="30dp"
                                    android:text="Jenis Kamar" />

                                <TextView
                                    android:layout_width="90dp"
                                    android:layout_height="30dp"
                                    android:text="Jumlah Orang" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="50dp"
                                        android:layout_height="30dp"
                                        android:text="Double" />

                                    <Button
                                        android:id="@+id/dua"
                                        android:layout_width="40dp"
                                        android:layout_height="20dp"
                                        android:layout_marginRight="10dp"
                                        android:background="@drawable/bg_rounded_grey_1"
                                        android:text="2"
                                        android:textColor="@android:color/white" />

                                    <EditText
                                        android:id="@+id/etDouble"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="@dimen/_10sdp"
                                        android:textColorHint="#bababa"
                                        android:textSize="@dimen/_12sdp"
                                        android:theme="@style/EditTextThemes" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="50dp"
                                        android:layout_height="30dp"
                                        android:text="Triple" />

                                    <Button
                                        android:id="@+id/tiga"
                                        android:layout_width="40dp"
                                        android:layout_height="20dp"
                                        android:layout_marginRight="10dp"
                                        android:background="@drawable/bg_rounded_grey_1"
                                        android:text="3"
                                        android:textColor="@android:color/white" />

                                    <EditText
                                        android:id="@+id/etTriple"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="@dimen/_10sdp"
                                        android:textColorHint="#bababa"
                                        android:textSize="@dimen/_12sdp"
                                        android:theme="@style/EditTextThemes" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="50dp"
                                        android:layout_height="30dp"
                                        android:text="Quard" />

                                    <Button
                                        android:id="@+id/empat"
                                        android:layout_width="40dp"
                                        android:layout_height="20dp"
                                        android:layout_marginRight="10dp"
                                        android:background="@drawable/bg_rounded_grey_1"
                                        android:text="4"
                                        android:textColor="@android:color/white" />

                                    <EditText
                                        android:id="@+id/etQuard"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="@dimen/_10sdp"
                                        android:textColorHint="#bababa"
                                        android:textSize="@dimen/_12sdp"
                                        android:theme="@style/EditTextThemes" />


                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Passport" />

                            <EditText
                                android:id="@+id/etPassport"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_10sdp"
                                android:textColorHint="#bababa"
                                android:textSize="@dimen/_12sdp"
                                android:theme="@style/EditTextThemes" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Maningitis" />

                            <EditText
                                android:id="@+id/etManingitis"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_10sdp"
                                android:textColorHint="#bababa"
                                android:textSize="@dimen/_12sdp"
                                android:theme="@style/EditTextThemes" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Pas Foto" />

                            <EditText
                                android:id="@+id/etPasFoto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_10sdp"
                                android:textColorHint="#bababa"
                                android:textSize="@dimen/_12sdp"
                                android:theme="@style/EditTextThemes" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Buku Nikah" />

                            <EditText
                                android:id="@+id/etBukuNikah"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_10sdp"
                                android:textColorHint="#bababa"
                                android:textSize="@dimen/_12sdp"
                                android:theme="@style/EditTextThemes" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="FC Akta Lahir" />

                            <EditText
                                android:id="@+id/etFC"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_10sdp"
                                android:textColorHint="#bababa"
                                android:textSize="@dimen/_12sdp"
                                android:theme="@style/EditTextThemes" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Visa Progresif" />

                            <EditText
                                android:id="@+id/etVisa"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_10sdp"
                                android:textColorHint="#bababa"
                                android:textSize="@dimen/_12sdp"
                                android:theme="@style/EditTextThemes" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Diskon" />

                            <EditText
                                android:id="@+id/etDiskon"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_10sdp"
                                android:textColorHint="#bababa"
                                android:textSize="@dimen/_12sdp"
                                android:theme="@style/EditTextThemes" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Tanggal Followup" />

                            <EditText
                                android:id="@+id/etFollowup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableRight="@drawable/ic_calendar"
                                android:paddingLeft="@dimen/_10sdp"
                                android:textColorHint="#bababa"
                                android:textSize="@dimen/_12sdp"
                                android:theme="@style/EditTextThemes" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Keterangan" />

                            <EditText
                                android:id="@+id/etKeterangan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_10sdp"
                                android:textColorHint="#bababa"
                                android:textSize="@dimen/_12sdp"
                                android:theme="@style/EditTextThemes" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Pembayaran" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/etPembayaran"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/_10sdp"
                                    android:text="DP."
                                    android:textColorHint="#bababa"
                                    android:textSize="@dimen/_12sdp"
                                    android:theme="@style/EditTextThemes" />

                                <EditText
                                    android:id="@+id/etPembayaransa"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/_10sdp"
                                    android:text="Rp. 0"
                                    android:textColorHint="#bababa"
                                    android:textSize="@dimen/_12sdp"
                                    android:theme="@style/EditTextThemes" />

                            </LinearLayout>

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <Button
                                android:id="@+id/btnNext"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/bg_rounded_orange_1"
                                android:text="Proses"
                                android:textAllCaps="false"
                                android:textColor="@android:color/white" />
                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#ba000d"
                            android:text="SIMPAN"
                            android:textColor="#fff"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#ffff00"
                            android:text="DAFTAR"/>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

</RelativeLayout>
