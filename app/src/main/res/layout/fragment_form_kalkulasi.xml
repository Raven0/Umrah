<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:clickable="false"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Nama (PIC)" />

                        <EditText
                            android:id="@+id/picName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/_10sdp"
                            android:textColorHint="#bababa"
                            android:textSize="@dimen/_12sdp"
                            android:theme="@style/EditTextThemes" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Tanggal Keberangkatan" />

                        <TextView
                            android:id="@+id/dateDeparture"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/ic_action_date"
                            android:background="?attr/editTextBackground"
                            android:theme="@style/EditTextThemes"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Tanggal Pulang" />

                        <TextView
                            android:id="@+id/dateArrival"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/ic_action_date"
                            android:background="?attr/editTextBackground"
                            android:theme="@style/EditTextThemes"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Maskapai" />

                        <EditText
                            android:id="@+id/etMaskapai"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/_10sdp"
                            android:textColorHint="#bababa"
                            android:textSize="@dimen/_12sdp"
                            android:theme="@style/EditTextThemes" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Hari" />

                        <EditText
                            android:id="@+id/etHari"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/_10sdp"
                            android:textColorHint="#bababa"
                            android:textSize="@dimen/_12sdp"
                            android:theme="@style/EditTextThemes" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Sisa Seat" />

                        <EditText
                            android:id="@+id/etSeat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/_10sdp"
                            android:textColorHint="#bababa"
                            android:textSize="@dimen/_12sdp"
                            android:theme="@style/EditTextThemes" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text=" Jenis Paket" />

                        <com.jaredrummler.materialspinner.MaterialSpinner
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:text="asd"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Jumlah" />

                        <EditText
                            android:id="@+id/etJumlah"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/_10sdp"
                            android:textColorHint="#bababa"
                            android:textSize="@dimen/_12sdp"
                            android:theme="@style/EditTextThemes" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text=" Hotel" />

                        <com.jaredrummler.materialspinner.MaterialSpinner
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:text="asd"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="30dp"
                            android:text="Kamar" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/dua"
                                android:layout_width="50dp"
                                android:layout_height="30dp"
                                android:background="@drawable/bg_rounded_grey_1"
                                android:text="2"
                                android:textColor="@android:color/white"
                                android:layout_marginRight="10dp"/>

                            <Button
                                android:id="@+id/tiga"
                                android:layout_width="50dp"
                                android:layout_height="30dp"
                                android:background="@drawable/bg_rounded_grey_1"
                                android:text="3"
                                android:textColor="@android:color/white"
                                android:layout_marginRight="10dp"/>

                            <Button
                                android:id="@+id/empat"
                                android:layout_width="50dp"
                                android:layout_height="30dp"
                                android:background="@drawable/bg_rounded_grey_1"
                                android:text="4"
                                android:textColor="@android:color/white" />

                        </LinearLayout>

                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <Button
                            android:id="@+id/btnNext"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:background="@drawable/bg_rounded_orange_1"
                            android:text="Sisa 3"
                            android:textAllCaps="false"
                            android:layout_alignParentEnd="true"
                            android:textColor="@android:color/white"
                            android:layout_alignParentRight="true"
                            android:drawableRight="@drawable/drawable_next_btn"/>

                    </RelativeLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

</RelativeLayout>
