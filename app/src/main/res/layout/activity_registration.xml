<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/header_bg">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/aiwalogo"
                    app:srcCompat="@drawable/aiwalogo" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="vertical"
                android:padding="@dimen/_20sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="40dp">

                    <EditText
                        android:id="@+id/noktp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="No KTP"
                        android:inputType="number"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="#ffff"
                        android:textColorHint="#ffff"
                        android:textSize="@dimen/_12sdp"
                        android:theme="@style/EditTextTheme" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="40dp">

                    <EditText
                        android:id="@+id/nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nama"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="#ffff"
                        android:textColorHint="#ffff"
                        android:textSize="@dimen/_12sdp"
                        android:theme="@style/EditTextTheme" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="40dp">

                    <!--<EditText-->
                        <!--android:id="@+id/jk"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:hint="Jenis Kelamin"-->
                        <!--android:paddingLeft="@dimen/_10sdp"-->
                        <!--android:textColor="#ffff"-->
                        <!--android:textColorHint="#ffff"-->
                        <!--android:textSize="@dimen/_12sdp"-->
                        <!--android:theme="@style/EditTextTheme" />-->
                    <RadioGroup
                        android:id="@+id/groupJk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/pria"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:buttonTint="#fff"
                            android:text="Pria"/>

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/wanita"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:buttonTint="#fff"
                            android:text="Wanita"/>

                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="40dp">

                    <EditText
                        android:id="@+id/alamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Alamat"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="#ffff"
                        android:textColorHint="#ffff"
                        android:textSize="@dimen/_12sdp"
                        android:theme="@style/EditTextTheme" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="40dp">

                    <EditText
                        android:id="@+id/telp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="No Telp"
                        android:inputType="phone"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="#ffff"
                        android:textColorHint="#ffff"
                        android:textSize="@dimen/_12sdp"
                        android:theme="@style/EditTextTheme" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="40dp">

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="#ffff"
                        android:textColorHint="#ffff"
                        android:textSize="@dimen/_12sdp"
                        android:theme="@style/EditTextTheme" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="40dp">

                    <EditText
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Username"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="#ffff"
                        android:textColorHint="#ffff"
                        android:textSize="@dimen/_12sdp"
                        android:theme="@style/EditTextTheme" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="40dp">

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="******"
                        android:inputType="textPassword"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="#ffff"
                        android:textColorHint="#ffff"
                        android:textSize="@dimen/_12sdp"
                        android:theme="@style/EditTextTheme" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilih Koordinator"
                    android:textColor="#ffff"
                    android:textColorHint="#ffff"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rounded_greyish"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="40dp">

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/koordinator"
                        android:layout_width="match_parent"
                        android:paddingLeft="@dimen/_10sdp"
                        android:layout_height="50dp" />

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp">

                <Button
                    android:id="@+id/kirim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:background="@drawable/button_outline"
                    android:text="REGISTRASI"
                    android:textColor="@android:color/white" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sudah Terdaftar ?"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/here"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:text="Login"
                        android:textColor="#ffff00"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>