<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:clickable="false"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="95dp"
                        android:layout_height="30dp"
                        android:text="Nama (PIC)" />

                    <EditText
                        android:id="@+id/picName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColorHint="#bababa"
                        android:textSize="@dimen/_12sdp"
                        android:theme="@style/EditTextThemes" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="95dp"
                        android:layout_height="50dp"
                        android:text="Tanggal Keberangkatan" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:drawableRight="@drawable/ic_calendar"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:background="?attr/editTextBackground"
                        android:gravity="center_vertical"
                        android:theme="@style/EditTextThemes"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="95dp"
                        android:layout_height="30dp"
                        android:text=" Jenis Paket" />

                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:textColorHint="#bababa"
                        android:textSize="@dimen/_12sdp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="95dp"
                        android:layout_height="30dp"
                        android:text="Jumlah" />

                    <EditText
                        android:id="@+id/jumlah"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColorHint="#bababa"
                        android:textSize="@dimen/_12sdp"
                        android:theme="@style/EditTextThemes" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:text="Kamar" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/dua"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_rounded_orange"
                            android:text="2"
                            android:textColor="@android:color/white"
                            android:layout_marginRight="10dp"/>

                        <Button
                            android:id="@+id/tiga"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_rounded_orange"
                            android:text="2"
                            android:textColor="@android:color/white"
                            android:layout_marginRight="10dp"/>

                        <Button
                            android:id="@+id/empat"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_rounded_grey"
                            android:text="4"
                            android:textColor="@android:color/white" />

                    </LinearLayout>

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="80dp">

                    <Button
                        android:id="@+id/button_next_fragment_step_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_rounded_orange"
                        android:text="Daftar"
                        android:textColor="@android:color/white" />

                </RelativeLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>
